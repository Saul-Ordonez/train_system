<h2>Departing From: <%= @train.city.name %></h2>
<h2>Destination: <%= @train.destination %></h2>
<h3>Time: <%= @train.time %></h3>

<form action="/cities/<%= @train.city.id %>/trains/<%= @train.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="destination">Rename train</label>
  <input id="destination" name="destination_input" type="text">

  <button type="submit">Update train</button>
</form>

<form action="/cities/<%= @train.city.id %>/trains/<%= @train.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete train</button>
</form>

<a href="/cities/<%= @train.city.id %>">Back to <%= @train.city.name %></a>
