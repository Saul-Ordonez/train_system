<h3><center>City Search</center></h3>
<form action="/cities">
  <div class="form-group">
    <input id="search" name="search" class="form-control bg-success" type="text">
  </div>
  <button type="submit" class="btn btn-primary">Go!</button>
</form>

<h3><center>Available Records</center></h3>
<% if @cities.any? %>
<ul>
  <% @cities.each do |city| %>
  <li><a href="/cities/<%= city.id %>"><strong><%= city.name %></strong></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no cities to display.</p>
<% end %>

<a href="/cities/new">Add a new city</a>
